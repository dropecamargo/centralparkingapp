<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/none" android:paddingRight="@dimen/none"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/main_background_shape">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/logo_central"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"/>

        <Button
            android:text="@string/parking"
            android:id="@+id/button_parking"
            android:onClick="viewList"
            android:background="@drawable/button_main_selector"
            style="@style/button_main_style"/>

        <Button
            android:text="@string/map"
            android:id="@+id/button_map"
            android:onClick="viewMap"
            android:background="@drawable/button_main_selector"
            style="@style/button_main_style"/>

        <Button
            android:text="@string/your_vehicle"
            android:id="@+id/button_list"
            android:background="@drawable/button_main_selector"
            style="@style/button_main_style" />

        <Button
            android:text="@string/favorites"
            android:id="@+id/button_favorites"
            android:background="@drawable/button_main_selector"
            style="@style/button_main_style" />
    </LinearLayout>

</RelativeLayout>
